@model MyMvcProject.Models.Book
@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2 class="mb-4 text-danger">Delete Book</h2>

            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">Are you sure you want to delete this book?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Author:</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3">Genre:</dt>
                        <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Genre</span></dd>

                        <dt class="col-sm-3">Mood:</dt>
                        <dd class="col-sm-9"><span class="badge bg-info">@Model.Mood</span></dd>

                        <dt class="col-sm-3">Year:</dt>
                        <dd class="col-sm-9">@Model.Year</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@model MyMvcProject.Models.BookRecommendationViewModel
@{
    ViewData["Title"] = "Book Recommendations";
}

@if (Model == null)
{
    <div class="container mt-4">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error</h4>
            <p>No data available. Please try again.</p>
            <a asp-action="Index" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
}
else
{
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-music-note-beamed me-2 fs-4"></i>
                <div>
                    <strong>Your music input:</strong> "@(Model.InputText ?? "N/A")"<br>
                    <strong>Detected mood:</strong> <span class="badge bg-primary fs-6">@(Model.DetectedMood ?? "Unknown")</span>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Personalized Book Recommendations</h2>
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> New Search
                </a>
            </div>

            @if (Model.RecommendedBooks != null && Model.RecommendedBooks.Any())
            {
                <div class="row g-4">
                    @foreach (var book in Model.RecommendedBooks)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0">
                                <img src="@book.CoverImageUrl" 
                                     class="card-img-top" 
                                     alt="@book.Title"
                                     style="height: 300px; object-fit: cover;">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@book.Title</h5>
                                    <p class="text-muted mb-2">
                                        <strong>Author:</strong> @book.Author
                                    </p>
                                    <p class="text-muted mb-2">
                                        <span class="badge bg-secondary">@book.Genre</span>
                                        <span class="badge bg-info">@book.Mood</span>
                                    </p>
                                    <p class="card-text flex-grow-1">@(book.Description.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description)</p>
                                    <div class="mt-auto">
                                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" 
                                           class="btn btn-primary w-100">
                                            <i class="bi bi-book"></i> View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center" role="alert">
                    <h4 class="alert-heading">No recommendations found</h4>
                    <p>No book recommendations are available for this mood yet. Please try a different music input.</p>
                    <a asp-action="Index" class="btn btn-primary">New Search</a>
                </div>
            }
        </div>
    </div>
</div>
}


@model List<MyMvcProject.Models.Book>
@{
    ViewData["Title"] = "My Favorite Books";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">My Favorite Books</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Home
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var book in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@book.CoverImageUrl" 
                             class="card-img-top" 
                             alt="@book.Title"
                             style="height: 300px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="text-muted mb-2">
                                <strong>Author:</strong> @book.Author
                            </p>
                            <p class="text-muted mb-2">
                                <span class="badge bg-secondary">@book.Genre</span>
                                <span class="badge bg-info">@book.Mood</span>
                            </p>
                            <p class="card-text flex-grow-1">@(book.Description.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description)</p>
                            <div class="mt-auto d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@book.Id" 
                                   class="btn btn-primary flex-grow-1">
                                    <i class="bi bi-book"></i> Details
                                </a>
                                <form asp-action="RemoveFromFavorites" method="post" class="d-inline">
                                    <input type="hidden" name="bookId" value="@book.Id" />
                                    <button type="submit" class="btn btn-outline-danger" 
                                            onclick="return confirm('Are you sure you want to remove this book from favorites?');">
                                        <i class="bi bi-heart-break"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No favorite books yet</h4>
            <p>Add books you like to your favorites to easily find them later.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Get Book Recommendations</a>
        </div>
    }
</div>


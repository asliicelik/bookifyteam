@model MyMvcProject.Models.Book
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 mb-4">
            <img src="@Model.CoverImageUrl" 
                 class="img-fluid rounded shadow" 
                 alt="@Model.Title"
                 style="max-height: 500px; width: 100%; object-fit: cover;">
        </div>
        <div class="col-md-8">
            <h1 class="display-5 fw-bold mb-3">@Model.Title</h1>
            
            <div class="mb-4">
                <h4 class="text-muted">@Model.Author</h4>
                <div class="mt-2">
                    <span class="badge bg-secondary fs-6 me-2">@Model.Genre</span>
                    <span class="badge bg-info fs-6 me-2">@Model.Mood</span>
                    <span class="badge bg-success fs-6">@Model.Year</span>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">About the Book</h5>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">ISBN</h6>
                            <p class="card-text">@Model.Isbn</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Mood</h6>
                            <p class="card-text">
                                <span class="badge bg-info fs-6">@Model.Mood</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <form asp-controller="Book" asp-action="AddToFavorites" method="post" class="d-inline">
                    <input type="hidden" name="bookId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-heart-fill"></i> Add to Favorites
                    </button>
                </form>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>
</div>

